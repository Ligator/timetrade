<div class="row">
  <div class="col"></div>
  <div class="col-md-5 col-sm-12 my-5">
    <h2>Cambio de contraseña</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :password, "Nueva Contraseña" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmación de Contraseña" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary text-center" %>
    <% end %>
    <div class="my-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col"></div>
</div>

