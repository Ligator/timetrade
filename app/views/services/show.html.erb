<p style="color: green"><%= notice %></p>
<div class="col-sm-8 mx-auto mt-5">
  <div class="card h-100 mb-5">
    <div class="card-body">
      <h5><%= @service.title %></h5>
     <div><%= @service.description %></div>
      <div><%= @service.id %></div>
      <div class="text-right">
        <%= link_to "Edit", edit_service_path(@service) %>
      </div>
    </div>
  </div>



  <%= form_tag(action: "create", controller: "tasks", html: { method: :post }) do %>
    <%= hidden_field_tag "task[service_id]", @service.id %>
      <div  class="row">
        <div class="col-9">
          <%= text_field_tag "task[time]", "",class: "col", placeholder:"Tiempo estimado (opcional)" %>
        </div>
        <div class="col-3 pl-0">
          <%= submit_tag "Apply", class: "col" %>
        </div>
      </div>
  <% end %>
  <%= render @task %>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="mb-3">
      <h5>Comments</h5>
    </div>

    <% @service.comments.reverse.each do |comment| %>
      <div class="card p-3 mt-2">
        <div class="row">
          <div class="col-md-3 justify-content-between align-items-center">
            <%= image_tag comment.user.gravatar_url(d: "identicon", s: "30"), class: "img-fluid rounded-circle" %>
            <span><small class="font-weight-bold text-primary"><%= comment.user.full_name %></small></span>
            <div><small><%= distance_of_time_in_words(comment.created_at, Time.current).capitalize %></small></div>
          </div>
          <div class="col-md-9">
            <p><%= comment.content %></p>
          </div>
        </div>

        <div class="mt-2">
          <div class="reply px-4">
            <small>Remove</small>
            <span class="dots"></span>
          </div>
          <div class="icons align-items-center">
              <i class="fa fa-star text-warning"></i>
              <i class="fa fa-check-circle-o check-icon"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

