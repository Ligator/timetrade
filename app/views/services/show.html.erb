<div class="row my-5">
  <div class="col-12">
    <h2><%= @service.title %></h2>
  </div>
  <div class="col-8">
    <div class="card h-100 mb-5">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted text-right"><%= service_kind(@service) %></h6>
        <div><%= @service.description %></div>
        <div class="text-right">
          <%= link_to "Edit", edit_service_path(@service) %>
        </div>
      </div>
    </div>
  </div>
  <% if @service.user_id != current_user.id %>
    <div class="col-4">
      <%= form_with(model: [@service, Task.new]) do |form| %>
        <div  class="row text-right">
          <div class="col-12">
            <%= form.text_field :time, class: "form-control", placeholder: "Tiempo estimado" %>
          </div>
          <div class="col-12">
            <%= form.submit "Solicitar servicio", class: "btn btn-primary mt-2" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<h4 class="text-muted">Tareas Assignadas</h4>
<% @tasks.each do |task| %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="row">
        <div class="col">
          <%= task.supplier.firstname + task.supplier.lastname %>
        </div>
        <div class="col">
          <%= task.supplier.email %>
        </div>
        <div class="col">
          Horas:
          <%= task.time %>
        </div>
        <div class="col">
          Estado:
          <%= task.state %>
        </div>

        <% if !task.ranking && task.beneficiary_id == current_user.id %>
          <div class="col col-4">
            <%= form_for(Ranking.new, url: rankings_path, html: { method: :post }) do |f| %>
              <div class="row row-cols-3">
                <div class="col">
                  <%= f.label "CalificaciÃ³n:" %>
                </div>
                <%= f.text_field :score, class: "form-control col col-2", type: :number, max: 5 %>
                <%= f.submit "Clomplete", class: "btn btn-primary col" %>
              </div>
            <% end %>
          </div>
        <% elsif task.ranking %>
          <div class="col">
            <h5><%= task.ranking.score %></h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="mb-3">
      <h5 class="text-muted">Comentarios</h5>
    </div>

    <div class="card p-3 mt-2">
      <div class="row">
        <div class="col-md-3 justify-content-between align-items-center">
          <%= image_tag current_user.gravatar_url(d: "identicon", s: "30"), class: "img-fluid rounded-circle" %>
          <span><small class="font-weight-bold text-primary"><%= current_user.full_name %></small></span>
        </div>
        <div class="col-md-9">

        <%= form_with(model: [@service, Comment.new]) do |form| %>
          <div class="text-right">
            <%= form.text_area :content, class: "form-control" %>
            <%= form.submit "Crear comentario", class: "btn btn-primary mt-2" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>

    <% @service.comments.reverse.each do |comment| %>
      <div class="card p-3 mt-2">
        <div class="row">
          <div class="col-md-3 justify-content-between align-items-center">
            <%= image_tag comment.user.gravatar_url(d: "identicon", s: "30"), class: "img-fluid rounded-circle" %>
            <span><small class="font-weight-bold text-primary"><%= comment.user.full_name %></small></span>
            <div><small><%= distance_of_time_in_words(comment.created_at, Time.current).capitalize %></small></div>
          </div>
          <div class="col-md-9">
            <p><%= comment.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

